<header class="bg-white shadow-md py-6 px-6 mb-12">
  <div class="max-w-7xl mx-auto flex justify-between items-center">
    <a href="/" class="text-2xl md:text-3xl font-bold text-blue-600 hover:text-blue-700 transition">
      TETSZIK
    </a>

    <!-- Desktop menü -->
    <nav class="hidden md:flex space-x-6 text-gray-700 font-medium">
      <a href="/" class="hover:text-blue-600 transition">Főoldal</a>
      <a href="/rolunk" class="hover:text-blue-600 transition">Rólunk</a>
      <a href="/kapcsolat" class="hover:text-blue-600 transition">Kapcsolat</a>
    </nav>

    <!-- Hamburger ikon mobilon -->
    <button id="hamburger" class="md:hidden text-gray-700 focus:outline-none z-50">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobil menü -->
  <nav id="mobileMenu" class="md:hidden fixed inset-0 bg-white bg-opacity-95 z-40 flex flex-col items-center justify-center space-y-10 text-2xl transform -translate-y-full transition-transform duration-300">
    <a href="/" class="hover:text-blue-600 transition">Főoldal</a>
    <a href="/rolunk" class="hover:text-blue-600 transition">Rólunk</a>
    <a href="/kapcsolat" class="hover:text-blue-600 transition">Kapcsolat</a>
  </nav>

  <!-- Kis JS a menü toggle-hoz -->
  <script type="module">
    const btn = document.getElementById('hamburger');
    const menu = document.getElementById('mobileMenu');
    let open = false;
    btn.addEventListener('click', () => {
      open = !open;
      if (open) {
        menu.classList.remove('-translate-y-full');
        menu.classList.add('translate-y-0');
        btn.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M6 18L18 6M6 6l12 12" />
                         </svg>`;
      } else {
        menu.classList.remove('translate-y-0');
        menu.classList.add('-translate-y-full');
        btn.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h16M4 18h16" />
                         </svg>`;
      }
    });
  </script>
</header>